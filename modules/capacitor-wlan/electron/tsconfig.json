{
    "compilerOptions": {
      "moduleResolution": "node",
      "noImplicitAny": false,
      "noEmitHelpers": true,
      "importHelpers": true,
      "removeComments": false,
      "preserveConstEnums": true,
      "skipLibCheck": true,
      "declaration": false,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "lib": ["dom", "es2020"],
      "module": "commonjs",
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "outDir": "build",
      "sourceMap": true,
      "strict": false,
      "target": "ES2017"
    },
    "include": ["src/**/*"]
}
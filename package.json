    "prettier": "^3.6.2",
    "reflect-metadata": "^0.2.2",
    "shx": "^0.4.0",
    "standard-version": "^9.5.0",
    "ts-node": ">=10.9.2",
    "typedoc": "^0.28.10",
    "typescript": "^5.9.2",
    "webpack": "^5.101.3",
    "webpack-bundle-analyzer": "^4.10.2",
    "webpack-cli": "^6.0.1"
  }
